waf_zone name=waf size=32m;

### Ngx_Waf
#waf on;
#waf_verify_bot on;
#waf_action cc_deny=444;

#waf_mode STD;
#waf_cc_deny on rate=30r/30s duration=1m zone=waf:cc;
#waf_cache on capacity=50;
#waf_under_attack on file=/etc/nginx/attack.html;

#waf_captcha on prov=reCAPTCHAv3 file=/full/path sitekey=your_sitekey secret=your_secret expire=4h zone=waf:cc;
