server {
    listen      80;
    listen [::]:80;
    server_name domain.com www.domain.com;
    return 301 https://domain.com$request_uri;
}

server {
    listen      443 ssl;
    listen [::]:443 ssl;
    server_name www.domain.com;
    http2 on;

    include h5bp/tls/ssl_engine.conf;
    include h5bp/tls/policy_balanced.conf;
    include h5bp/tls/ocsp_stapling.conf;

    ssl_certificate         /etc/letsencrypt/live/domain.com/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/domain.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/domain.com/chain.pem;

    #include h5bp/tls/auth_origin.conf;
    return 301 https://domain.com$request_uri;
}

server {
    listen      443 ssl;
    listen [::]:443 ssl;
    server_name domain.com;
    http2 on;

    include h5bp/tls/ssl_engine.conf;
    include h5bp/tls/policy_balanced.conf;
    include h5bp/tls/ocsp_stapling.conf;

    ssl_certificate         /etc/letsencrypt/live/domain.com/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/domain.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/domain.com/chain.pem;

    #include h5bp/tls/auth_origin.conf;
    
    root      /var/www/domain.com/public;
    error_log /var/www/domain.com/error.log;
    client_max_body_size 20m;
    
    ### Shlink Start
    index index.html;

    location ~* \.(?:manifest|appcache|html?|xml|json)$ {
       expires -1;
    }

    location ~* .+\.(css|js|html|png|jpe?g|gif|bmp|ico|json|csv|otf|eot|svg|svgz|ttf|woff|woff2|ijmap|pdf|tif|map) {
        try_files $uri $uri/ =404;
    }

    location / {
        try_files $uri $uri/ /index.html$is_args$args;
    }
    ### Shlink End

    include h5bp/basic.conf;
}
