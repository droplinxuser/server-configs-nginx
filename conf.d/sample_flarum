server {
    listen 80;
    listen [::]:80;
    server_name domain.com www.domain.com;
    return 301 https://domain.com$request_uri;

    root      /var/www/html/$host/public;
    error_log /var/www/html/error.log;
}

server {
    listen 443           quic;
    listen [::]:443      quic; 
    listen 443      ssl http2;
    listen [::]:443 ssl http2;

    add_header alt-svc 'h3=":443"; ma=86400';
    server_name www.domain.com;

    include h5bp/tls/ssl_engine.conf;
    include h5bp/tls/policy_strict.conf;
    include h5bp/tls/ocsp_stapling.conf;

    ssl_certificate         /etc/letsencrypt/live/domain.com/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/domain.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/domain.com/chain.pem;
    return 301 https://$host$request_uri;
}

server {
    listen 443           quic reuseport;
    listen [::]:443      quic reuseport; 
    listen 443      ssl http2 reuseport;
    listen [::]:443 ssl http2 reuseport;

    add_header alt-svc 'h3=":443"; ma=86400';
    server_name domain.com;
       
    include h5bp/tls/ssl_engine.conf;
    include h5bp/tls/policy_strict.conf;
    include h5bp/tls/ocsp_stapling.conf;

    ssl_certificate         /etc/letsencrypt/live/domain.com/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/domain.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/domain.com/chain.pem;
    
    root      /var/www/html/$host/public;
    error_log /var/www/html/$host_error.log;

    ### Max Upload
    client_max_body_size 20m;

    location / {
    try_files $uri $uri/ /index.php?$query_string;
    }

    include h5bp/php_flarum.conf;
    include h5bp/basic_xf.conf;
    include h5bp/errors/custom_errors.conf;
    include h5bp/security/strict-transport-security.conf;
    include h5bp/location/web_performance_filename-based_cache_busting.conf;
    include h5bp/location/web_performance_svgz-compression.conf;
    include h5bp/drop.conf;
}
