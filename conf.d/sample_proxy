server {
    listen 80;
    server_name cdn.domain.com;

    root      /var/www/html/cdn.domain.com;
    error_log /var/www/html/cdn.domain.com/error.log;

    client_max_body_size 5m;
    sendfile_max_chunk   5m;
    limit_rate_after     5m;
    limit_rate        5120k;

    set $cdn_origin http://origin.com;
    add_header Link "<$cdn_origin$request_uri>; rel=\"canonical\"";
    add_header Access-Control-Allow-Origin *;

    location / {
        try_files $uri @cdn_back;
    }

    location @cdn_back {
        proxy_pass $cdn_origin;
        include h5bp/proxy.conf;
        limit_except GET {deny all;}
    }

    include h5bp/errors/custom_errors.conf;
    include h5bp/location/web_performance_filename-based_cache_busting.conf;
    include h5bp/location/web_performance_svgz-compression.conf;
    include h5bp/drop.conf;
}

server {
    listen 443 ssl http2 reuseport fastopen=256;
    server_name cdn.domain.com;

    include h5bp/tls/ssl_engine.conf;
    include h5bp/tls/policy_balanced.conf;
    include h5bp/tls/ocsp_stapling.conf;

    ssl_certificate         /etc/letsencrypt/live/cdn.domain.com/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/cdn.domain.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/cdn.domain.com/chain.pem;
    
    root      /var/www/html/cdn.domain.com;
    error_log /var/www/html/cdn.domain.com/error.log;

    client_max_body_size 5m;
    sendfile_max_chunk   5m;
    limit_rate_after     5m;
    limit_rate        5120k;

    set $cdn_origin https://origin.com;
    add_header Link "<$cdn_origin$request_uri>; rel=\"canonical\"";
    add_header Access-Control-Allow-Origin *;

    location / {
        try_files $uri @cdn_back;
    }

    location @cdn_back {
        proxy_pass $cdn_origin;
        proxy_http_version 1.1;
        proxy_set_header "Connection" "";
        include h5bp/proxy.conf;
        limit_except GET {deny all;}
    }

    include h5bp/errors/custom_errors.conf;
    include h5bp/security/strict-transport-security.conf;
    include h5bp/location/web_performance_filename-based_cache_busting.conf;
    include h5bp/location/web_performance_svgz-compression.conf;
    include h5bp/drop.conf;
}
